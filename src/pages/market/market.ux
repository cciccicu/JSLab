<template>
	<div class="page" style="flex-direction: column;">
    <!-- 顶栏 -->
    <img static src="/common/images/hd.png" class="topbar-bg" />
    <img static class="btn" src="/common/images/back.png" @click="back" style="left: 6px;top: 6px;"/>
    <img static class="btn" src="/common/images/upload.png" @click="$app.$def.showToste('敬请期待')" style="left: 258px;top: 6px;"/>
    <text class="time-text">{{nowTime}}</text>
    <text class="title-text">JS市场</text>

    <!-- 内容 -->
    <text class="center-text" style="top: 190px;font-size:30px">敬请期待</text>
    <text class="center-text" style="top: 235px;font-size:20px;">由于作者学业问题</text>
    <text class="center-text" style="top: 260px;font-size:20px;">短时间内此部分可能不会上线</text>
    <text class="center-text" style="top: 295px;font-size:20px;color:#666;">JS市场,旨在一定程度上替代部分简单快应用(如天气)的功能,允许用户上传和分享脚本,以节省快应用数量占用</text>

    </div>
</template>

<script>
import router from '@system.router';
import app from '@system.app';

export default {
  private: {
    nowTime: "00:00",
    timer: null
  },
  exit(){
	  app.terminate();
  },
  updateTime() {
    const date = new Date();
    let hours = date.getHours();
    let minutes = date.getMinutes();

    hours = hours < 10 ? '0' + hours : hours;
    minutes = minutes < 10 ? '0' + minutes : minutes;

    this.nowTime = `${hours}:${minutes}`;
  },
  onInit() {
    this.updateTime();
    this.timer = setInterval(() => {
      this.updateTime();
    }, 1000);
  },
  onDestroy(){
	  clearInterval(this.timer);
  },
  routerTo(page) {
    router.push({
      uri: `/pages/${page}`
    });
  },
  back(){
  	router.back();
  },
};
</script>

